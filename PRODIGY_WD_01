            transition: color 0.3s ease;
        }

        #navbar a:hover {
            color: orangered; /* Change to the desired hover text color */
        }

        section {
            height: 800px; /* Replace with the actual content height on your pages */
            margin-top: 50px; /* Ensure content is not hidden behind the fixed navbar */
        }
    </style>

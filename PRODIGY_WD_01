<script>
    window.addEventListener('scroll', function () {
        var navbar = document.getElementById('navbar');
        if (window.scrollY > 50) {
            navbar.style.backgroundColor = '#8FBC8F'; // Change background color on scroll
        } else {
            navbar.style.backgroundColor = '#2F4F4F'; // Restore original background color
        }
    });
</script>

